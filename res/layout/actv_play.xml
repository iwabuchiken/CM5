<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <TextView
        android:id="@+id/actv_play_tv_file_name"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_weight="1"
        
        android:text="TextView"
        android:textSize="25dp"
        
        android:textColor="@color/black"
        android:background="@color/white"
        
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_gravity="bottom"
        
        android:gravity="center"
        >

        <Button
            android:id="@+id/actv_play_bt_play"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"

            android:text="@string/actv_play_bt_play"
			android:textSize="20dp"
			
			android:textColor="@color/blue1"
            
            
		 />

        <Button
            android:id="@+id/actv_play_bt_stop"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"

            android:text="@string/actv_play_bt_stop"
			android:textSize="20dp"
			
			android:textColor="@color/red"
		 />

        <Button
            android:id="@+id/actv_play_bt_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"

            android:text="@string/generic_bt_back"
            android:textSize="20dp"
		 />

    </LinearLayout>

</LinearLayout>